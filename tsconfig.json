{
    "compilerOptions": {
      "noImplicitAny": true,
      "outDir": "dist/types",
      "module": "esnext",
      "target": "es2015",
      "allowJs": true,
      "sourceMap": true,
      "declaration": true,
      "emitDeclarationOnly": true,
      "suppressImplicitAnyIndexErrors": true,
      "lib": ["es2018", "dom"],
      "moduleResolution": "node",
    },
    "include": ["src/"],
    "exclude": ["src/lib/**/tests"],
}
